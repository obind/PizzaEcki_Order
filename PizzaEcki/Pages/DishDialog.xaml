<Window x:Class="PizzaEcki.Pages.DishDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dish Dialog" Height="300" Width="400">
    <Grid>
        <StackPanel>
            <Label Content="Name des Gerichts:" />
            <TextBox Name="NameTextBox" Width="200"/>

            <Label Content="Preis:" />
            <TextBox Name="PriceTextBox" Width="200"/>

            <Label Content="Kategorie:" />
            <ComboBox Name="CategoryComboBox" Width="200" Loaded="CategoryComboBox_Loaded" SelectionChanged="CategoryComboBox_SelectionChanged"/>

            <Label Content="Größe:" />
            <ComboBox Name="SizeComboBox" Width="200"/>

            <Button Content="Speichern" Width="100" Height="30" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
