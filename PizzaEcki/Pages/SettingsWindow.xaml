<Window x:Class="PizzaEcki.Pages.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Einstellungen" Height="400" Width="600">
    <Grid>
        <TabControl>
            <TabItem Header="Fahrer">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <ListView Name="DriversList" Margin="10">
                        <!-- Fahrer-Liste -->
                    </ListView>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                        <Button Content="Hinzufügen" Click="AddDriverButton_Click" Margin="5" />
                        <Button Content="Bearbeiten" Click="EditDriverButton_Click" Margin="5" />
                        <!--<Button Content="Löschen" Click="DeleteDriverButton_Click" Margin="5" />-->
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Gerichte">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>


                    </Grid.RowDefinitions>
                    <ListView Name="DishListView" MouseDoubleClick="DishListView_MouseDoubleClick">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID" Width="50" DisplayMemberBinding="{Binding Id}"/>
                                <GridViewColumn Header="Name" Width="150" DisplayMemberBinding="{Binding Name}"/>
                                <GridViewColumn Header="Preis S" Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Preis_S, StringFormat={}{0:0.00 €}}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Preis L" Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Preis_L, StringFormat={}{0:0.00 €}}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Preis XL" Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Preis_XL, StringFormat={}{0:0.00 €}}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Kategorie" Width="100" DisplayMemberBinding="{Binding Kategorie}"/>
                                <GridViewColumn Header="Happy Hour" Width="100" DisplayMemberBinding="{Binding HappyHour}"/>
                                <GridViewColumn Header="Steuersatz" Width="100" DisplayMemberBinding="{Binding Steuersatz}"/>
                                <GridViewColumn Header="Gratis Beilage" Width="100" DisplayMemberBinding="{Binding GratisBeilage}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>


                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                        <Button Content="Hinzufügen" Click="AddDishButton_Click" Margin="5"></Button>
                        <Button Content="Löschen" Click="DeleteDishButton_Click" Margin="5"></Button>
                        <!-- Neuer Button zum Löschen -->
                    </StackPanel>

                </Grid>
            </TabItem>
            <TabItem Header="Andere Einstellungen">
                <!-- Weitere Einstellungen -->
            </TabItem>
        </TabControl>
    </Grid>
</Window>
