<Window x:Class="PizzaEcki.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">
    <Grid Background="#FF7A7A7A">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="960*" />
            <ColumnDefinition Width="287*" />
            <ColumnDefinition Width="194*"/>
            <ColumnDefinition Width="480*" />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="76*" />

            <RowDefinition Height="271*" />
            <RowDefinition Height="204*"/>
            <RowDefinition Height="348*" />
            <RowDefinition Height="250*" />
        </Grid.RowDefinitions>

        <Grid Margin="0,0,286,20" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Erfassung" HorizontalAlignment="Center" VerticalAlignment="Center" Height="35" Width="160"/>
            <Button Grid.Column="1" Content="Tabellen" HorizontalAlignment="Center" VerticalAlignment="Center" Height="35" Width="160"/>
            <Button Grid.Column="2" Content="Logbuch" HorizontalAlignment="Center" VerticalAlignment="Center" Height="35" Width="160" />
            <Button Grid.Column="3" Content="Funktionen" HorizontalAlignment="Center" VerticalAlignment="Center" Height="35" Width="160"/>
            <Button Grid.Column="4" Content="Auswertung" HorizontalAlignment="Center" VerticalAlignment="Center" Height="35" Width="160"/>
        </Grid>
        <Grid Grid.RowSpan="3" Background="#9e9e9e" Margin="22,70,18,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="190"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="177.5"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="45*"/>
                <RowDefinition Height="76*"/>
                <RowDefinition Height="76*"/>
                <RowDefinition Height="76*"/>
                <RowDefinition Height="76*"/>
                <RowDefinition Height="76*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Content="Kundendaten" VerticalAlignment="Center" Background="#474747" Foreground="White" Grid.ColumnSpan="3" MinHeight="40" FontWeight="Bold" FontSize="22" Height="34"/>
            <Label Grid.Row="1" Content="KundenNR." VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="24" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White" Height="42" Width="134" Margin="36,0,20,0" />
            <TextBox x:Name="PhoneNumberTextBox" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"  KeyUp="OnEnterKeyPressed" VerticalAlignment="Center" MinHeight="35" Margin="0,0,20,0" FontSize="18" VerticalContentAlignment="Center"/>
            <Label Grid.Row="2" Content="Name" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="24" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White" Height="42" Width="74" Margin="66,0,20,0"/>
            <TextBox x:Name="NameTextBox"  Grid.Row="2" Grid.Column="1" Margin="0,0,20,0" Grid.ColumnSpan="2" VerticalAlignment="Center" MinHeight="35" VerticalContentAlignment="Center" FontSize="18"/>
            <Label Grid.Row="3" Content="Straße" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="24" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White" Height="42" Width="80" Margin="62,0,20,0"/>
            <TextBox x:Name="StreetTextBox" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,0,20,0" VerticalAlignment="Center" MinHeight="35" FontSize="18" VerticalContentAlignment="Center"/>
            <Label Grid.Row="4" Content="Ort" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="24" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White" Height="41" Width="46" Margin="80,0,20,0"/>
            <TextBox x:Name="CityTextBox" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,0,20,0" VerticalAlignment="Center" MinHeight="35" VerticalContentAlignment="Center" FontSize="18"/>
            <Label Grid.Row="5" Content="Zusatz" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="24" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White" Height="42" Width="80" Margin="62,0,20,0"/>
            <TextBox x:Name="AdditionalInfoTextBox" Grid.Row="5" Grid.Column="1" Margin="0,0,20,0" Grid.ColumnSpan="2" VerticalAlignment="Center" MinHeight="35" FontSize="18" VerticalContentAlignment="Center" Height="35"/>
            <Button x:Name="SaveButton" Grid.Row="6" Grid.Column="2" Content="Speichern" HorizontalAlignment="Right" Width="100" Background="Green" Foreground="White" Margin="0,5,20,5" Click="OnSaveButtonClicked" MinHeight="30"/>
        </Grid>

        <Grid Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Background="#9e9e9e" Margin="10,220,20,24" Grid.RowSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Content="Eingabe" Grid.Row="0" Grid.ColumnSpan="4" VerticalAlignment="Top" Height="34" Background="#474747" Foreground="White" Margin="0,0,-1,0" MinHeight="40" FontWeight="Bold" FontSize="22" VerticalContentAlignment="Center"/>
            <Label Grid.Row="1" Content="Gericht" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="24" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White" Height="42" Width="89" Margin="0,0,20,0"/>
            <ComboBox x:Name="dishComboBox" Grid.Row="1" Grid.Column="1" Margin="0,5,10,5" IsEditable="True" SelectionChanged ="DishComboBox_TextChanged"  PreviewKeyDown="DishComboBox_AutocompleteKeyDown" VerticalAlignment="Center" MinHeight="35" VerticalContentAlignment="Center" FontSize="18" />

            <Label Grid.Row="2" Content="Extras" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="24" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White" Height="42" Width="75" Margin="0,0,20,0"/>
            <ComboBox x:Name="extras" Grid.Row="2" Grid.Column="1"  Margin="0,5,10,5" IsEditable="True" SelectionChanged="Extras_SelectionChanged" VerticalAlignment="Center" MinHeight="35" KeyDown="ExtraCombobox_AutocompleteKeyDown" VerticalContentAlignment="Center" FontSize="18" />

            <Label Grid.Row="3" Content="Uhrzeit" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="24" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White" Height="42" Width="89" Margin="0,0,20,0"/>
            <xctk:TimePicker Name="TimePicker" FormatString="HH:mm" Grid.Row="3" Grid.Column="1" Margin="0,5,0,5" HorizontalAlignment="Left" Width="150" VerticalAlignment="Center" MinHeight="35" FontSize="18" VerticalContentAlignment="Center" KeyDown="TimePicker_KeyDown" TimeInterval="00:30:00" Format="Custom" InputScope="Xml"/>


            <Label Grid.Row="1" Grid.Column="2" Content="Anzahl" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="24" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White" Height="42" Width="150" Margin="36,0,0,0" Grid.ColumnSpan="2"/>
            <ComboBox x:Name="amountComboBox" Grid.Row="1" Grid.Column="2" Margin="125,0,0,0" SelectionChanged="amountComboBox_SelectionChanged" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.ColumnSpan="2" Width="50" FontSize="18" KeyDown="amountComboBox_KeyDown">
                <ComboBoxItem Content="1" />
                <ComboBoxItem Content="2" />
                <ComboBoxItem Content="3" />
            </ComboBox>
        </Grid>

        <Grid Grid.Row="2" Background="#9e9e9e" Margin="20,189,20,22" Grid.ColumnSpan="4" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>
            <Label Content="Bestellung" Grid.Row="0" Height="38" Background="#474747" Foreground="White" VerticalAlignment="Top" VerticalContentAlignment="Center" FontSize="18" FontWeight="Bold"/>
            <DataGrid x:Name="myDataGrid" Margin="0,36,0,30" Grid.Row="1" AutoGenerateColumns="False" Background="White" Foreground="Black" GridLinesVisibility="All"  HeadersVisibility="Column" RowBackground="#FFFFFF" AlternatingRowBackground="#F0F0F0" ColumnHeaderHeight="40" Grid.RowSpan="3" FontSize="16">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="0.10*" Header="Nr." Binding="{Binding Nr}" />
                    <DataGridTextColumn Width="0.25*" Header="Gericht" Binding="{Binding Gericht}" />
                    <DataGridTextColumn Width="0.25*" Header="Extras" Binding="{Binding Extras}" />
                    <DataGridTextColumn Width="0.10*" Header="Menge" Binding="{Binding Menge}" />
                    <DataGridTextColumn Width="0.10*" Header="Epreis" Binding="{Binding Epreis}" />
                    <DataGridTextColumn Width="0.10*" Header="Gesamt" Binding="{Binding Gesamt}" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Grid Grid.Row="4" Background="#9e9e9e" Margin="20,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="232*" />
                <ColumnDefinition Width="232*" />
                <ColumnDefinition Width="109*" />
                <ColumnDefinition Width="356*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Label Content="Offene Bestellung" Grid.Row="0" Height="50" Background="#474747" Foreground="White" VerticalAlignment="Top" Grid.ColumnSpan="4" FontSize="18" FontWeight="Bold"/>
            <Label Grid.Column="0" Grid.Row="1" Content="Mitnehmer" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="24" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White" Height="42" Margin="101,0,0,0" Width="131" />
            <TextBox Grid.Row="1" Grid.Column="1" Margin="10,10,10,10" FontSize="24" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White"/>

            <Label Grid.Column="0" Grid.Row="2" Content="Selbstabholer" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="24" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White" Height="42" Margin="73,0,0,0" Width="159"/>
            <TextBox Grid.Row="2" Grid.Column="1" Margin="10,10,10,10" FontSize="24" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White"/>

            <Label Grid.Column="0" Grid.Row="3" Content="Auslieferung" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="24" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White" Height="42" Margin="84,0,0,0" Width="148"/>
            <TextBox Grid.Row="3" Grid.Column="1" Margin="10,10,10,10" FontSize="24" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White"/>

            <Label Grid.Column="2" Grid.Row="1" Content="Bon" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="24" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White" Height="42" Width="53"/>
            <TextBox Grid.Column="3" Grid.Row="1" Margin="10,10,10,10" FontSize="24" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White"/>

            <Label Grid.Column="2" Grid.Row="2" Content="Fahrer" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="24" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White" Height="42" Width="78"/>
            <ComboBox Grid.Column="3" Grid.Row="2" Margin="10,10,10,10"/>
        </Grid>
        <Grid Grid.Row="4" Grid.Column="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="47*"/>
                <ColumnDefinition Width="49*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button x:Name="TotalPriceButton" Height="60" Width="200" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-1,21,0" Background="#21aa00" Click="Button_Click" FontSize="30" Foreground="#FFFFFBFB" Content="00.00€" Grid.Column="1"/>
        </Grid>







    </Grid>
</Window>
