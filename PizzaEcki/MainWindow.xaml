<Window x:Name="MainWindowEcki" x:Class="PizzaEcki.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        
        mc:Ignorable="d"
        Title="MainWindow" KeyDown="MainWindowEcki_KeyDown">
    <Grid Background="#FF7A7A7A">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*" />
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />

        </Grid.RowDefinitions>

        <Grid x:Name="F1Grid" Margin="0,-1,143,0" VerticalAlignment="Top" Height="35" Visibility="Hidden">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Erfassung" HorizontalAlignment="Center" VerticalAlignment="Center" Height="35" Width="160" Margin="0,0,5,0"/>
            <Button Grid.Column="1" Content="Tabellen" HorizontalAlignment="Center" VerticalAlignment="Center" Height="35" Width="160" Margin="0,0,5,0"/>
            <Button Grid.Column="2" Content="Logbuch" HorizontalAlignment="Center" VerticalAlignment="Center" Height="35" Width="160" Margin="0,0,5,0" />
            <Button Grid.Column="3" Content="Funktionen" HorizontalAlignment="Center" VerticalAlignment="Center" Height="35" Width="160" Margin="0,0,5,0"/>
            <Button Grid.Column="4" Content="Auswertung" HorizontalAlignment="Center" VerticalAlignment="Center" Height="35" Width="160" Margin="0,0,5,0"/>
        </Grid>
        <Grid  Background="#9e9e9e" Margin="50,5,0,0" Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*" MinHeight="25"/>
                <RowDefinition Height="*" MinHeight="25"/>
                <RowDefinition Height="*" MinHeight="25"/>
                <RowDefinition Height="*" MinHeight="25"/>
                <RowDefinition Height="*" MinHeight="25"/>
                <RowDefinition Height="*" MinHeight="25"/>
                <RowDefinition Height="*" MinHeight="25"/>

            </Grid.RowDefinitions>
            <Label Content="Kundendaten" Background="#474747" Foreground="White" FontWeight="Bold" FontSize="20" VerticalContentAlignment="Center" Grid.ColumnSpan="2" Padding="5,0,5,2" VerticalAlignment="Top"/>
            <Label Content="KundenNR." VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White" Grid.Row="1" MinHeight="20" Padding="5,0,5,0" Margin="0,0,0,2" />
            <TextBox x:Name="PhoneNumberTextBox" Grid.Row="1" Grid.Column="1"  KeyUp="OnEnterKeyPressed" VerticalAlignment="Center" Margin="0,2,10,2" FontSize="16" VerticalContentAlignment="Center" KeyDown="PhoneNumberTextBox_KeyDown"/>
            <Label Content="Name" HorizontalAlignment="Center" FontSize="20" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center" Grid.Row="2" Padding="5,0,5,0" MinHeight="20" Margin="0,0,0,2"/>
            <TextBox x:Name="NameTextBox"  Grid.Row="2" Grid.Column="1" Margin="0,2,10,2" VerticalAlignment="Center" VerticalContentAlignment="Center" FontSize="16"/>
            <Label Grid.Row="3" Content="Straße" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White" Padding="5,0,5,0" MinHeight="20" Margin="0,0,0,2"/>
            <TextBox x:Name="StreetTextBox" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" FontSize="16" VerticalContentAlignment="Center" Margin="0,2,10,2"/>
            <Label Grid.Row="4" Content="Ort" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White" Padding="5,0,5,0" MinHeight="20" Margin="0,0,0,2"/>
            <TextBox x:Name="CityTextBox" Grid.Row="4" Grid.Column="1" Margin="0,2,10,2" VerticalAlignment="Center" FontSize="16" VerticalContentAlignment="Center"/>
            <Label Grid.Row="5" Content="Zusatz" HorizontalAlignment="Center" FontSize="20" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White" VerticalContentAlignment="Center" VerticalAlignment="Center" Padding="5,0,5,0" MinHeight="20" Margin="0,0,0,2"/>
            <TextBox x:Name="AdditionalInfoTextBox" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center" FontSize="16" VerticalContentAlignment="Center" Margin="0,2,10,2"/>
            <Button x:Name="SaveButton" Grid.Row="6" Grid.Column="1" Content="Speichern" HorizontalAlignment="Right" Background="#FF21AA00" Foreground="White" Click="OnSaveButtonClicked" HorizontalContentAlignment="Right" Margin="0,0,10,0" Height="30" Width="58" Visibility="Collapsed"        />
        </Grid>

        <Grid Grid.Column="1" Grid.Row="1"  Background="#9e9e9e" Margin="5,5,50,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1.5*"/>

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*" MinHeight="25" />
                <RowDefinition Height="1*" MinHeight="25" />
                <RowDefinition Height="1*" MinHeight="25" />
                <RowDefinition Height="1*"  MinHeight="25"/>
            </Grid.RowDefinitions>
            <Label Content="Eingabe" Background="#474747" Foreground="White" FontWeight="Bold" FontSize="20" VerticalContentAlignment="Center" Grid.ColumnSpan="3" Padding="5,0,5,2" VerticalAlignment="Top"/>

            <Label Grid.Row="1" Content="Gericht" FontSize="20" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White" FontStretch="ExtraCondensed" VerticalAlignment="Bottom" HorizontalAlignment="Center" MinHeight="20" Margin="0,0,0,2" Padding="5,0,5,0"/>
            <ComboBox x:Name="DishComboBox" Grid.Row="1" Margin="0,1,10,0" IsEditable="True" SelectionChanged ="DishComboBox_TextChanged"  PreviewKeyDown="DishComboBox_AutocompleteKeyDown" VerticalContentAlignment="Center" FontSize="18" VerticalAlignment="Bottom" Grid.Column="1" Padding="2,0,2,0" Grid.IsSharedSizeScope="True" />

            <Label Grid.Row="2" Content="Extras" FontSize="20" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center" Margin="0,0,0,2" HorizontalAlignment="Center" MinHeight="20" Padding="5,0,5,0"/>
            <ComboBox x:Name="extras" Grid.Row="2"  Margin="0,5,10,5" IsEditable="True" SelectionChanged="Extras_SelectionChanged" KeyDown="ExtraCombobox_AutocompleteKeyDown" VerticalContentAlignment="Center" FontSize="18" AllowDrop="True" VerticalAlignment="Center" Grid.Column="1" Padding="2,0,2,0" />
           
            <Label Grid.Row="2" Grid.Column="3" Content="Anzahl" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="20" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White" MinHeight="20" Padding="5,0,5,0"/>
            <ComboBox x:Name="amountComboBox" Grid.Row="2" Grid.Column="3" SelectionChanged="amountComboBox_SelectionChanged" VerticalAlignment="Center" Width="50" FontSize="18" KeyDown="amountComboBox_KeyDown" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center" Height="30" Margin="83,0,0,0" HorizontalAlignment="Left">
                <ComboBoxItem Content="1" />
                <ComboBoxItem Content="2" />
                <ComboBoxItem Content="3" />
            </ComboBox>
            <Label Grid.Row="1" Grid.Column="2" Content="Größe" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="20" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White" MinHeight="20" Padding="5,0,5,0"/>
            <ComboBox x:Name="SizeComboBox" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" Width="50" FontSize="18" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center" Height="30" Margin="83,0,0,0" HorizontalAlignment="Left" />

            <Label Grid.Row="3" Content="Uhrzeit" FontSize="20" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White" Margin="0,5,0,5" VerticalAlignment="Top" HorizontalAlignment="Center" Padding="5,0,5,0" MinHeight="20"/>
            <xctk:TimePicker Name="TimePicker" FormatString="HH:mm" Grid.Row="3" VerticalAlignment="Top" FontSize="18" VerticalContentAlignment="Center" KeyDown="TimePicker_KeyDown" TimeInterval="00:30:00" Format="Custom" InputScope="Xml" Margin="0,5,10,5" Padding="2,0,2,0" Grid.Column="1" Height="31" HorizontalContentAlignment="Left"/>

        </Grid>

        <Grid Grid.Row="2" Background="#9e9e9e" Margin="50,20,50,0" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*" MinHeight="25"/>
                <RowDefinition Height="1*" MinHeight="25"/>
            </Grid.RowDefinitions>
            <Label Content="Bestellung" Grid.Row="0" Background="#474747" Foreground="White" VerticalContentAlignment="Center" FontSize="20" FontWeight="Bold" Grid.ColumnSpan="2" Padding="0,0,0,0" Height="NaN" VerticalAlignment="Bottom"/>
            <DataGrid x:Name="myDataGrid" AutoGenerateColumns="False" Background="#FFE9E9E9" Foreground="Black" GridLinesVisibility="All" RowBackground="#FFC1C1C1" AlternatingRowBackground="#FFB3B3B3" FontSize="15" AlternationCount="3" Panel.ZIndex="1" Grid.Row="1" MinHeight="40" VerticalContentAlignment="Center" VerticalAlignment="Top">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="0.10*" Header="Nr." Binding="{Binding Nr}" />
                    <DataGridTextColumn Width="0.25*" Header="Gericht" Binding="{Binding Gericht}" />
                    <DataGridTextColumn Width="0.25*" Header="Extras" Binding="{Binding Extras}" />
                    <DataGridTextColumn Width="0.10*" Header="Menge" Binding="{Binding Menge}" />
                    <DataGridTextColumn Width="0.10*" Header="Epreis" Binding="{Binding Epreis}" />
                    <DataGridTextColumn Width="0.10*" Header="Gesamt" Binding="{Binding Gesamt}" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <Grid Grid.Row="4" Background="#9e9e9e" Margin="50,8,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="132*" />
                <ColumnDefinition Width="109*" />
                <ColumnDefinition Width="81*" />
                <ColumnDefinition Width="108*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Label Content="Offene Bestellung" Grid.Row="0" Background="#474747" Foreground="White" Grid.ColumnSpan="4" FontSize="18" FontWeight="Bold" Padding="2,2,2,2" Height="42" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
            <Label Content="Mitnehmer" FontSize="20" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center" Height="40" HorizontalAlignment="Center" Grid.Row="1" />
            <Label x:Name="MitnehmerLabel" Grid.Row="1" Grid.Column="1" FontSize="18" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White" Margin="0,0,10,0" VerticalContentAlignment="Center" VerticalAlignment="Center"/>

            <Label Grid.Row="2" Content="Selbstabholer" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White" Height="42"/>
            <Label x:Name="SelbstabholerLabel" Grid.Row="2" Grid.Column="1" Margin="0,0,10,0" FontSize="18" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center" VerticalContentAlignment="Center" Padding="5,5,5,5"/>

            <Label Grid.Column="0" Grid.Row="3" Content="Auslieferung" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White" Height="42"/>
            <Label x:Name="AuslieferungLabel" Grid.Row="3" Margin="0,0,10,0" FontSize="18" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White" Grid.Column="1" Padding="5,5,5,5" VerticalContentAlignment="Center" VerticalAlignment="Center"/>

            <Label Grid.Column="2" Grid.Row="1" Content="Bon" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White" Height="42"/>
            <TextBox Grid.Column="3" Grid.Row="1" Margin="0,2,10,0" FontSize="18" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center" VerticalContentAlignment="Center" Padding="5,5,5,5" RenderTransformOrigin="0.5,0.5">
                <TextBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="3.186"/>
                        <RotateTransform/>
                        <TranslateTransform X="0.444"/>
                    </TransformGroup>
                </TextBox.RenderTransform>
            </TextBox>

            <Label Grid.Column="2" Grid.Row="2" Content="Fahrer" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24" FontFamily="Segoe UI" FontWeight="SemiBold" Foreground="White" Height="42"/>
            <ComboBox Grid.Column="3" Grid.Row="2" Margin="0,2,10,0" VerticalAlignment="Center" VerticalContentAlignment="Center" Padding="5,5,5,5" FontSize="18"/>
        </Grid>
        <Grid Grid.Row="4" Grid.Column="1" Margin="97,14,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button x:Name="TotalPriceButton" HorizontalAlignment="Right" VerticalAlignment="Top" Background="#21aa00" Click="FinishOrderBtn" FontSize="30" Foreground="#FFFFFBFB" Content="00.00€" Margin="0,0,50,0"/>
        </Grid>







    </Grid>
</Window>
